<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_list_bg_selector" >
    <RelativeLayout
        android:id="@+id/item_layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dp"
        android:background="@drawable/item_list_bg_selector" >

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="100.0dip"
            android:layout_height="80.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4.0dip"
            android:layout_marginTop="3.0dip"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_time"
            style="@style/item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_image"
            />
            
        <ImageView
            android:id="@+id/read_icon"
            android:src="@drawable/news_readed"
            android:contentDescription="@string/app_name"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/item_image"
            android:layout_alignLeft="@+id/item_image"
            android:layout_toLeftOf="@+id/item_image"
            />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="240dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/item_image"
            android:layout_toLeftOf="@+id/item_image"
            android:lines="2"
            android:text=""
            android:textSize="18.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/item_layout_head"
        android:background="@color/divider_day" />

</RelativeLayout>